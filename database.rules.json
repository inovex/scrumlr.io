{
  "rules": {
    ".read": false,
    ".write": false,
    "boards": {
      "$boardId": {
        ".read": "!root.child('boards').hasChild($boardId) || data.child('private/config/creatorUid').val() === auth.uid || data.child('private/config/adminUsers').hasChild(auth.uid)",
        ".write": "!root.child('boards').hasChild($boardId) || data.child('private/config/creatorUid').val() === auth.uid || data.child('private/config/adminUsers').hasChild(auth.uid)",

        "public": {
          ".read": "root.child('boards/'+$boardId+'/private/users').hasChild(auth.uid)",
          "config": {
            ".read": true
          },
          "applicants": {
            "$uid": {
              ".read": "$uid === auth.uid",
              ".write": "$uid === auth.uid"
            }
          },
          "accessAuthorized": {
            "$uid": {
              ".read": "$uid === auth.uid"
            }
          }
        },

        "private": {
          ".read": "data.child('users').hasChild(auth.uid)",
          "cards": {
            "$cardId": {
              ".write": "!root.child('boards/'+$boardId+'/private/cards').hasChild($cardId) || data.child('authorUid').val() === auth.uid",
              "userVotes": {
                "$uid": {
                  ".write": "$uid === auth.uid"
                }
              },
              "votes": {
                ".write": "null !== auth.uid"
              }
            }
          },
          "users": {
            "$uid": {
              "name": {
                ".validate": "newData.val().matches(/^[^\\s]+.*$/)"
              },
              ".write": "$uid === auth.uid && (root.child('boards/'+$boardId+'/public/config/secure').val() === false || root.child('boards/'+$boardId+'/public/accessAuthorized').hasChild(auth.uid))"
            }
          },
          "presence": {
            "$uid": {
              ".write": "$uid === auth.uid && (root.child('boards/'+$boardId+'/public/config/secure').val() === false || root.child('boards/'+$boardId+'/public/accessAuthorized').hasChild(auth.uid))"
            }
          }
        }
      }
    }
  }
}
