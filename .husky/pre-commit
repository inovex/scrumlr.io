#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

set -eu

SCRIPT_DIRECTORY="$(dirname -- "$( readlink -f -- "$0"; )";)"

PATH="$PATH:$SCRIPT_DIRECTORY/../node_modules/.bin"

