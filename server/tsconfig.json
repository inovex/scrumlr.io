{
  "compilerOptions": {
    "baseUrl": "src/",
    "target": "es5",
    "outDir": "build",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "lib": [
      "esnext", "dom"
    ],
    "skipLibCheck": true,
    "rootDir": "src",
  },
  "include": ["src"]
}