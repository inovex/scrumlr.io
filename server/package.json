{
  "name": "scrumlr.io-server",
  "version": "1.0.0",
  "private": true,
  "license": "MIT with Commons Clause",
  "scripts": {
    "serve": "nodemon --watch \"src/**\" --ext \"ts\" --exec \"ts-node src/index.ts\"",
    "start": "ts-node src/index.ts",
    "start:server": "cross-env SCRUMLR_OPERATION_MODE=server ts-node src/index.ts",
    "start:livequery": "cross-env SCRUMLR_OPERATION_MODE=livequery ts-node src/index.ts",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint src/",
    "lint:fix": "eslint --fix src/",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "devDependencies": {
    "@types/http-proxy-middleware": "^1.0.0",
    "@types/parse": "^2.18.9",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-only-warn": "^1.0.3",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
    "http-proxy-middleware": "^2.0.1",
    "parse": "^3.3.0",
    "parse-server": "^4.5.2"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": "eslint --fix",
    "src/**/*.{ts,tsx,json,css,scss,md}": "prettier --write"
  },
  "resolutions": {
    "**/**/axios": "^0.21.1",
    "**/**/netmask": "^2.0.1"
  }
}
